<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="setBasicButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="setZeroPaddingButtonStyle" parent="@style/setBasicButtonStyle">
        <item name="android:padding">0dp</item>
    </style>

    <style name="setControlButtonStyle" parent="@style/setBasicButtonStyle">
        <item name="android:textColor">@color/base_white</item>
    </style>

    <style name="nineCardLayoutRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="nineCardCardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/ninecard_margin_card_layout</item>
    </style>

    <style name="nineCardCardImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">@dimen/ninecard_margin_card_image</item>
        <item name="android:src">@drawable/empty</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/base_lightgray</item>
    </style>

    <style name="nineCardCardNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">@dimen/ninecard_margin_card_text</item>
        <item name="android:textColor">@color/base_white</item>
    </style>

    <style name="vsDialogTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="helpTextViewStyleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="helpTextViewTitleStyle" parent="@style/helpTextViewStyleBase">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="helpTextViewDescStyle" parent="@style/helpTextViewStyleBase">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="helpImageViewStyleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_margin_help</item>
        <item name="android:paddingRight">@dimen/activity_margin_help</item>
    </style>
    <style name="helpImageViewAttrStyle" parent="@style/helpImageViewStyleBase">
    </style>
    <style name="helpImageViewCaseStyle" parent="@style/helpImageViewStyleBase">
    </style>

</resources>
