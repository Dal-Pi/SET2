<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_only_one_set_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/base_white"
    tools:context="com.kania.set2.ui.TimeAttackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/only_one_image_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:id="@+id/only_one_layout_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/only_one_text_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="end game"/>
                    <Button
                        android:id="@+id/only_one_btn_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rank"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/only_one_layout_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/only_one_text_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"/>
                    <TextView
                        android:id="@+id/only_one_text_plus_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/only_one_text_score"
                        android:layout_centerVertical="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/answer_red"
                        android:text=""/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/only_one_text_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/only_one_layout_score"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="remain time"/>

                <Button
                    android:id="@+id/only_one_btn_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="hint"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/onlyOneCardRowStyle">

                <RelativeLayout
                    android:id="@+id/only_one_card_layout1"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image1"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/only_one_card_layout2"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image2"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/only_one_card_layout3"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image3"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/onlyOneCardRowStyle">

                <RelativeLayout
                    android:id="@+id/only_one_card_layout4"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image4"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/only_one_card_layout5"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image5"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/only_one_card_layout6"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image6"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/onlyOneCardRowStyle">

                <RelativeLayout
                    android:id="@+id/only_one_card_layout7"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image7"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/only_one_card_layout8"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image8"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/only_one_card_layout9"
                    style="@style/onlyOneCardLayoutStyle">
                    <ImageView
                        android:id="@+id/only_one_card_image9"
                        style="@style/onlyOneCardImageStyle"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
